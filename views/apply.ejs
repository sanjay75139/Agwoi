<%-include('./partials/header.ejs')%>
	<!-- start header Area -->
	<%-include('./partials/navigation.ejs')%>
	<!-- end header Area -->

	<!-- start banner Area -->
	<section class="banner-area">
		<div class="container">
			<div class="row banner-content">
				<div class="col-lg-12 d-flex align-items-center justify-content-between">
					<div class="left-part">
						<h1>
							Apply NOW
						</h1>
					
					</div>
					<div class="right-part">
						<a href="/">home</a>
						<span class="fa fa-caret-right"></span>
						<a href="/apply">apply now</a>
					</div>
				</div>
			</div>
			<%if(errorMessage){%>
				<div class="user-message user-message--error" ><%=errorMessage%></div>
			<%}%>
			<div>
				<form action="/postSubmit" method="post" enctype="multipart/form-data">
					<div class="form-group">
						<label for="exampleInputEmail1">Name</label>
						<input type="text" class="form-control <%=validationErrors.find(e=>e.param==='name') ? 'invalid' : ''%>" id="name" name="name" placeholder="Enter Full name" 
							value="<%=info.name%>"	required>
						
					</div>

					<div class="form-group">
					  <label for="exampleInputEmail1">Email Address</label>
					  <input type="email" class="form-control <%=validationErrors.find(e=>e.param==='email') ? 'invalid' : ''%>" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" value="<%=info.email%>" placeholder="Enter your mail" required>
					  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
					</div>
					
					
					<div>
						<label for="gender">Gender</label>
					</div>
					<!-- <div class="form-check">
						<input class="form-check-input" type="radio" name="radio" id="exampleRadios1" value="male" checked>
						<label class="form-check-label" for="exampleRadios1">
						  Male
						</label>
					  </div> -->
					  <div class="form-check" id="gender">
						<label class="radio-inline"><input type="radio" name="radio" value="male" checked>Male</label> <br>
						<label class="radio-inline"><input type="radio" name="radio" value="female">Female</label>
					</div>
					  <!-- <div class="form-check">
						<input class="form-check-input" type="radio" name="radio" id="exampleRadios2" value="female">
						<label class="form-check-label" for="exampleRadios2">
						  Female
						</label>
					</div> -->
					<div class="form-group">
						<label for="image">Upload your Passport size photo</label>
						<input class="form-control"
							type="file" 
							name="image" 
							id="image" >
							<small id="emailHelp" class="form-text text-muted">Image type PNG/JPG/JPEG only</small>
					</div>
					<div class="form-group">
						<label for="date">DOB</label>
						<input type="date" class="form-control <%=validationErrors.find(e=>e.param==='date') ? 'invalid' : ''%>" id="date" name="date" placeholder="DD-MM-YY" required>
						
					</div>
					<div class="form-group">
						<label for="number">Number</label>
						<input type="number" value="<%=info.num%>" class="form-control <%=validationErrors.find(e=>e.param==='num') ? 'invalid' : ''%>" id="number" name="num" placeholder="xxxxx xxxxx" required>
						
					</div>


					<div class="form-group">
						<label for="exampleFormControlTextarea1">Your Address</label>
						<textarea class="form-control" id="exampleFormControlTextarea1" name="address" rows="3" required><%=info.address %></textarea>
					</div>
					<div class="form-group">
						<label for="dist">District</label>
						<input type="text" class="form-control" id="dist" name="dist" placeholder="Ex.Madurai" value="<%=info.dist%>" required>
						
					</div>

					<div class="form-group">
						<label for="aadhar">Aadhar no</label>
						<input type="number" class="form-control  <%=validationErrors.find(e=>e.param==='aadhar') ? 'invalid' : ''%>" value="<%=info.aadhar%>" id="aadhar" name="aadhar" placeholder="Enter 12-digit aadhar number" required>
					</div>



					<div class="form-group">
						<label for="shopname">Your Shop Name</label>
						<input type="text" class="form-control" id="shopname" name="shop" value="<%=info.shop%>" placeholder="Enter your Shop name" required>
					</div>


					<div class="form-group">
						<label for="exampleFormControlTextarea1">Your Shop Address</label>
						<textarea class="form-control" id="exampleFormControlTextarea1" name="shopAd" rows="3" required><%=info.shopAd%></textarea>
					</div>


					<div class="form-group">
						<label for="desi">Applicant's Designation </label>
						<input type="text" class="form-control" id="desi" name="desi" value="<%=info.desi%>" placeholder="Ex: Manager" required>
						
					</div>

					<small id="emailHelp" class="form-text text-muted">Please fill and check the details correctly once submitted it cannot be changed.</small>

					<!-- <div class="form-group form-check">
					  <input type="checkbox" class="form-check-input" id="exampleCheck1">
					  <label class="form-check-label" for="exampleCheck1">Check me out</label>
					</div> -->
					<br>
					<button type="submit"  class="btn btn-primary "  >Apply</button>
				  </form>
			</div>
		</div>
	</section>
	<br>
	<!-- End post-content Area -->

	<!-- Start Footer Area -->
	<%-include('./partials/footer.ejs')%>